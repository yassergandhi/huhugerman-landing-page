  font-size: 0.85rem;
  line-height: 1.5;
}

/* CONTACT */
.contact-section { max-width: 700px; }
.contact__bio {
  color: var(--gray);
  font-size: 1rem;
  line-height: 1.75;
  margin-bottom: 1rem;
