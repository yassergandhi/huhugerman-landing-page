  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(340px, 1fr));
  gap: 1.5rem;
  margin-bottom: 3.5rem;
}
.evidence-card {
  background: var(--aubergine);
  border: 1px solid var(--aubergine-light);
  border-radius: 8px;
  padding: 1.75rem;
}
.evidence-card__header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 1.5rem;
}
.evidence-card__n {
  font-family: var(--font-mono);
  font-size: 0.85rem;
  color: var(--gray-dim);
}
.evidence-card__metrics {
  display: flex;
  flex-direction: column;
  gap: 1.2rem;
}
.metric { display: flex; align-items: baseline; gap: 1rem; }
.metric__pct {
  font-size: 2rem;
  font-weight: 700;
  color: var(--orange);
