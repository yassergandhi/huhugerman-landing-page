  font-size: 0.85rem;
  color: var(--gray);
  line-height: 1.45;
}

/* QUOTES */
.quotes { margin-bottom: 4rem; }
.quote {
  border-left: 3px solid var(--orange);
  padding: 1.25rem 1.5rem;
  margin-bottom: 1.25rem;
  background: var(--aubergine);
  border-radius: 0 6px 6px 0;
}
.quote__text {
  color: var(--white-warm);
  font-size: 1rem;
  line-height: 1.65;
  margin-bottom: 0.75rem;
  font-style: italic;
}
.quote__footer {
  display: flex;
  gap: 1rem;
  align-items: center;
  font-size: 0.8rem;
}
.quote__code {
  font-family: var(--font-mono);
  color: var(--orange);
  font-style: normal;
}
.quote__level {
  background: var(--aubergine-light);
  color: var(--white-warm);
  padding: 0.15rem 0.5rem;
  border-radius: 3px;
  font-style: normal;
}
.quote__label { font-style: normal; }

/* TIMELINE */
.timeline {
  display: flex;
  flex-direction: column;
  gap: 0;
}
.timeline__item {
  display: grid;
  grid-template-columns: 5rem 1fr;
  gap: 1.5rem;
  padding: 1rem 0;
  border-bottom: 1px solid var(--aubergine-light);
  align-items: start;
}
.timeline__year {
  font-family: var(--font-mono);
  font-size: 0.85rem;
  font-weight: 700;
  color: var(--orange);
  padding-top: 0.1rem;
}
.timeline__event {
  font-size: 0.95rem;
  color: var(--gray);
  line-height: 1.6;
}

/* STACK */
.stack__intro {
  color: var(--gray);
  max-width: 640px;
  margin-bottom: 2.5rem;
  line-height: 1.75;
  font-size: 1rem;
}
.stack__intro code {
  color: var(--orange);
  background: var(--aubergine-dark);
  padding: 0.1rem 0.4rem;
  border-radius: 3px;
  font-size: 0.9em;
}
.stack-table { display: flex; flex-direction: column; gap: 0; }
.stack-table__header, .stack-table__row {
  display: grid;
  grid-template-columns: 140px 260px 1fr;
  gap: 1.5rem;
  padding: 0.9rem 1rem;
  align-items: start;
}
.stack-table__header {
  font-family: var(--font-mono);
  font-size: 0.75rem;
  font-weight: 700;
  letter-spacing: 0.08em;
  text-transform: uppercase;
  color: var(--gray-dim);
  border-bottom: 1px solid var(--aubergine-light);
}
.stack-table__row {
  border-bottom: 1px solid var(--aubergine-dark);
  background: var(--aubergine-dark);
}
.stack-table__row:nth-child(odd) { background: rgba(48, 10, 36, 0.4); }
.stack-table__layer {
  font-weight: 700;
  color: var(--white-warm);
  font-size: 0.9rem;
}
.stack-table__tech {
  color: var(--orange);
  font-size: 0.85rem;
  line-height: 1.5;
}
